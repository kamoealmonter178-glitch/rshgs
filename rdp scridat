           echo - Microsoft/**>> "%EXLIST%"
           echo - Microsoft*/**>> "%EXLIST%"
           echo - ModifiableWindowsApps/**>> "%EXLIST%"
           echo - MongoDB/**>> "%EXLIST%"
           echo - mongosh/**>> "%EXLIST%"
           echo - Mozilla Firefox/**>> "%EXLIST%"
           echo - MSBuild/**>> "%EXLIST%"
           echo - MySQL/**>> "%EXLIST%"

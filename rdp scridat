      - name: Install & Start Playit.gg (Tunnel)
        run: |
          Write-Host "Downloading Playit.gg Agent..."
          # Download valid Windows x64 binary
          Invoke-WebRequest -Uri "https://github.com/playit-cloud/playit-agent/releases/download/v0.15.26/playit-0.15.26-windows-amd64.exe" -OutFile "playit.exe"
          
